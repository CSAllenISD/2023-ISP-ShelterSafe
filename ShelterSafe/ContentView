                        Label("Map", systemImage: "map")
                    }.tag("Map")
                
            HomePageView()
                .tabItem {
                    Label("Home Page", systemImage: "house")
                }
                .tag("Home Page")
                ToolBoxView()
                    .tabItem {
                        Label("Weather Watch", systemImage: "tornado")
                    }
                    .tag("Settings")
                
                
                //DetailView().ignoresSafeArea()
                Text("placeholder")
                    .tabItem {
                        Label("Settings", systemImage: "gear")
                    }.tint(Color.yellow)
                
                
            }
                
        }
        
    }

    
    
